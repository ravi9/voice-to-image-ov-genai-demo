# Voice-to-Image Pipeline Model Configuration
# Edit this file to change model sources and paths

[models]
# Whisper model for speech recognition
# https://huggingface.co/collections/OpenVINO/speech-to-text
# OpenVINO/distil-whisper-large-v3-int4-ov
# OpenVINO/whisper-medium-int4-ov
# OpenVINO/whisper-large-v3-int4-ov
whisper_hf_id = OpenVINO/distil-whisper-large-v3-int4-ov

# LLM model for prompt enhancement
# https://huggingface.co/collections/OpenVINO/llm
llm_hf_id = llmware/llama-3.2-3b-instruct-ov

# Image generation model (LCM-SDXL)
# Sample models: https://huggingface.co/collections/OpenVINO/image-generation
# image_hf_id = OpenVINO/FLUX.1-schnell-int4-ov
image_hf_id = rpanchum/lcm-sdxl-ov-fp16-quant_unet


[devices]
# Default device configurations
whisper_default = NPU
llm_default = GPU
image_default = GPU

[image_sizes]
# Pre-compiled image sizes (width x height)
size_1 = 512, 512
size_2 = 1024, 1024
size_3 = 1024, 768

[cache]
# Cache directory for compiled models
cache_dir = ov-cache
